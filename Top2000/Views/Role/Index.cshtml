@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h2>Top 2000 Rollen</h2>
<section class="col-lg-6">
    <table class="table-bordered">
        @Html.ActionLink("Maak een rol", "Create", "Role")
    </table>
</section>

<section class="col-lg-6">
    <table class="table-bordered">
        @Html.ActionLink("Geef een rol", "RegisterRole", "Account")
    </table>
</section>

<br />

<table class="table table-bordered table-hover">
    <tr>
        <th class="c">
            Role Name
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="c">
                @item.Name
            </td>
        </tr>
    }
</table>